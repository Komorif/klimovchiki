<Page x:Class="PracticalWork12.Pages.MainAuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracticalWork12.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainAuthPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="409">



            <Label FontSize="20" FontFamily="Arial">
                <TextBlock>
                    <Run Text="Login: "/>
                    <Run Text="{Binding Login}"/>
                </TextBlock>
            </Label>

            <Button x:Name="ButtonProducts"
                Content="Список товаров"
                Click="ButtonProducts_Click"
                Height="38" Width="213"/>

            <Button x:Name="ButtonExit"
                Content="Выход из аккаунта"
                Click="ButtonExit_Click"
                Height="38" Width="213" Cursor="Hand"/>

        </StackPanel>
    </Grid>
</Page>
