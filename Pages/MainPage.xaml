<Page x:Class="PracticalWork12.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracticalWork12.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <Label Content="Вы зашли как гость"
                   Foreground="White" Cursor=""
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="18"/>

            <Button x:Name="ButtonProducts"
                Content="Список товаров"
                Click="ButtonProducts_Click"
                Height="38" Width="213"/>

            <Button x:Name="ButtonAuth"
                Content="Авторизация"
                Click="ButtonAuth_Click"
                Height="38" Width="213"/>

        </StackPanel>
        
    </Grid>
</Page>
