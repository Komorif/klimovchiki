<Page x:Class="PracticalWork12.Pages.AutorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracticalWork12.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutorizationPage">

    <Grid>
        <Border CornerRadius="20"
        Background="White"
        Padding="30"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Width="338">

            <StackPanel>
                <!-- Заголовок (опционально) -->
                <TextBlock Text="Вход" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" />

                <!-- Поле логина -->
                <StackPanel>
                    <Label Content="login" FontSize="16" FontFamily="Arial" Width="229" />
                    <TextBox x:Name="TextBoxLogin" Width="232" HorizontalAlignment="Center" />
                </StackPanel>

                <!-- Поле пароля -->
                <StackPanel>
                    <Label Content="password" FontSize="16" FontFamily="Arial" Width="229" />
                    <PasswordBox x:Name="TextBoxPassword" Width="232" HorizontalAlignment="Center" />
                </StackPanel>

                <!-- Кнопка входа -->
                <Button x:Name="ButtonAuth"
                Content="sign in"
                Width="232"
                Height="31"
                Background="#4A90E2"
                Foreground="White"
                FontSize="16"
                FontFamily="Arial"
                Click="ButtonAuth_Click"
                HorizontalAlignment="Center"
                Margin="0,10,0,4" BorderThickness="1,1,1,1"
               />

                <!-- Кнопка регистрации -->
                <Button x:Name="ButtonReg"
                Content="войти как гость"
                Width="234"
                Height="32"
                Background="#4A90E2"
                Foreground="White"
                FontSize="16"
                FontFamily="Arial"
                Click="ButtonGuest_Click"
                HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

    </Grid>
</Page>