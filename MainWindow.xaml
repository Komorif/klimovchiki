<Window x:Class="PracticalWork12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticalWork12"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1100">
    <Grid Background="#4346f5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Margin="0,10,0,0"/>

        <Border Grid.Column="0"
            Background="#3033c0"
            CornerRadius="10,0,0,10"
            Padding="10"
            VerticalAlignment="Stretch">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Label x:Name="LabelNamePage"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Content="(не выбрана)"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
